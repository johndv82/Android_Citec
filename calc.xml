<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.citec.asus.calculadora.CalcActivity">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:background="#D5F5D5"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="7"
        android:layout_below="@id/txtResultado"
        android:layout_alignParentLeft="true"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="8"
        android:layout_toRightOf="@id/btn7"
        android:layout_alignTop="@id/btn7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="9"
        android:layout_toRightOf="@id/btn8"
        android:layout_alignTop="@id/btn8"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="4"
        android:layout_below="@id/btn7"
        android:layout_alignLeft="@id/btn7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="5"
        android:layout_alignTop="@id/btn4"
        android:layout_toLeftOf="@id/btn9"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="6"
        android:layout_alignLeft="@id/btn9"
        android:layout_alignTop="@id/btn5"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="1"
        android:layout_below="@id/btn4"
        android:layout_alignParentLeft="true"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="2"
        android:layout_toLeftOf="@id/btn9"
        android:layout_alignTop="@id/btn1"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="3"
        android:layout_alignTop="@id/btn2"
        android:layout_alignLeft="@id/btn6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="0"
        android:layout_below="@id/btn1"
        android:layout_alignLeft="@id/btn1"
        android:layout_alignRight="@id/btn2"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="Clear"
        android:layout_alignTop="@id/btn9"
        android:layout_toRightOf="@id/btn9"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="."
        android:layout_below="@id/btn3"
        android:layout_toRightOf="@id/btn0"
        android:layout_alignBottom="@id/btn0"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="+"
        android:layout_below="@id/btn9"
        android:layout_toRightOf="@id/btn6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="-"
        android:layout_alignRight="@id/btnSuma"
        android:layout_alignTop="@id/btn3"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnMultiplicacion"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="*"
        android:layout_below="@id/btnBorrar"
        android:layout_toRightOf="@id/btnSuma"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="/"
        android:layout_below="@id/btnMultiplicacion"
        android:layout_toRightOf="@id/btnResta"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="="
        android:layout_below="@id/btnResta"
        android:layout_toRightOf="@id/btnPunto"
        android:layout_alignParentRight="true"
        android:textSize="30dp" />
</RelativeLayout>
